{
  "syntax": "scss",
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "extends": [
    "stylelint-config-htmlacademy",
    "stylelint-order-htmlacademy"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["function", "if", "each", "include", "mixin", "return"]
    }],
    "max-nesting-depth": [3, {"ignore": ["pseudo-classes"]}],
    "indentation": [2, {"ignore": ["inside-parens"]}],
    "function-calc-no-invalid": true
  }
}
